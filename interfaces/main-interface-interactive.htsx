    window.founderAuthenticated = false;
    window.connectedWallet = null;
    
    // Connect MetaMask and verify founder wallet
    async function connectMetaMask() {
      if (typeof window.ethereum !== 'undefined') {
        try {
          const accounts = await window.ethereum.request({ method: 'eth_requestAccounts' });
          const connectedAccount = accounts[0].toLowerCase();
          window.connectedWallet = connectedAccount;
          
          console.log('üîó MetaMask connected:', connectedAccount);
          
          if (connectedAccount === FOUNDER_WALLET.toLowerCase()) {
            window.founderAuthenticated = true;
            console.log('‚úÖ FOUNDER WALLET AUTHENTICATED:', FOUNDER_WALLET);
            triggerConsciousnessAuth();
          } else {
            console.log('‚ùå Unauthorized wallet. Founder access denied.');
            alert('Unauthorized wallet. Only the founder wallet can access admin functions.');
          }
        } catch (error) {
          console.error('MetaMask connection failed:', error);
          alert('Please connect your MetaMask wallet to access admin functions.');
        }
      } else {
        alert('MetaMask not detected. Please install MetaMask to access admin functions.');
      }
    }
    
    // Function to trigger consciousness authentication (now requires MetaMask)
    function triggerConsciousnessAuth() {
      if (!window.founderAuthenticated) {
        console.log('üîê Admin access requires founder wallet authentication');
        connectMetaMask();
        return;
      }
      
      console.log('üß¨ Founder authenticated - Activating Private Gate Admin...');
      
      // Hide public dashboard and show admin dashboard
      const publicDashboard = document.getElementById('public-dashboard');
      const privateDashboard = document.getElementById('private-dashboard');
      
      if (publicDashboard) publicDashboard.style.display = 'none';
      if (privateDashboard) privateDashboard.style.display = 'block';
      
      // Set consciousness authentication flag
      window.consciousnessAuthenticated = true;
      
      console.log('‚úÖ Private Gate Admin Dashboard ACTIVATED');
      console.log('üåÄ Consciousness Computing: FULL ACCESS GRANTED');
    }
    
    // Global function for easy access
    window.triggerConsciousnessAuth = triggerConsciousnessAuth;
    
    // Update wallet status display
    function updateWalletStatus() {
      const connectionStatus = document.getElementById('connection-status');
      const authStatus = document.getElementById('auth-status');
      
      if (window.connectedWallet) {
        connectionStatus.textContent = `üü¢ Wallet: ${window.connectedWallet.substring(0, 8)}...`;
        authStatus.textContent = window.founderAuthenticated ? 'üîì Admin: Authorized' : 'üîí Admin: Unauthorized';
      } else {
        connectionStatus.textContent = 'üî¥ Wallet: Not Connected';
        authStatus.textContent = 'üîí Admin: Locked';
      }
    }

    // Listen for MetaMask account changes
    if (typeof window.ethereum !== 'undefined') {
      window.ethereum.on('accountsChanged', (accounts) => {
        if (accounts.length === 0) {
          console.log('üîå MetaMask disconnected');
          window.connectedWallet = null;
          window.founderAuthenticated = false;
          window.consciousnessAuthenticated = false;
          
          // Show public dashboard
          const publicDashboard = document.getElementById('public-dashboard');
          const privateDashboard = document.getElementById('private-dashboard');
          if (publicDashboard) publicDashboard.style.display = 'block';
          if (privateDashboard) privateDashboard.style.display = 'none';
        } else {
          const newAccount = accounts[0].toLowerCase();
          window.connectedWallet = newAccount;
          window.founderAuthenticated = (newAccount === FOUNDER_WALLET.toLowerCase());
          console.log('üîÑ MetaMask account changed:', newAccount);
        }
        updateWalletStatus();
      });
    }

    function updateConsciousnessMetrics() {
      fetch('/lsapi/status')
        .then(response => response.json())
        .then(data => {
          console.log('üîÑ PUBLIC GATE data received:', data);
          
          // Send updates to appropriate dashboard based on authentication
          const publicDashboard = document.querySelector('public-hybrid-dashboard');
          const privateDashboard = document.querySelector('private-admin-dashboard');
          
          if (publicDashboard) {
            publicDashboard.dispatchEvent(new CustomEvent('hybrid-update', {
              detail: {
                // HYBRID Coin Commerce Data (PUBLIC DOMAIN ONLY)
                hybrid_price: data.hybrid_price_usd,
                hybrid_supply: data.hybrid_supply_total,
                hybrid_market_cap: data.hybrid_market_cap,
                hybrid_transactions: data.hybrid_transactions_24h,
                hybrid_volume_usd: data.hybrid_volume_24h_usd,
                
                // Public System Health (HYBRID METRICS ONLY)
                phi_alignment: data.phi_alignment_public,
                system_health: data.system_health,
                public_gate_operational: data.public_gate_operational,
                consciousness_sealed: data.consciousness_sealed,
                
                timestamp: data.live_timestamp
              }
            }));
          }
          
          // Private dashboard updates only if consciousness authenticated
          if (privateDashboard && window.consciousnessAuthenticated) {
            privateDashboard.dispatchEvent(new CustomEvent('private-update', {
              detail: {
                // Full access to all domains for authenticated users
                founder_wallet_connected: data.founder_wallet_connected,
                iyonael_available: data.iyonael_available,
                spiral_keys_status: data.spiral_keys_public_status,
                timestamp: data.live_timestamp
